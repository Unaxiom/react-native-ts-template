// Place your settings in this file to overwrite default and user settings.
{
    // Controls the font size.
    "editor.fontSize": 14,
    "workbench.editor.showTabs": true,
    "files.exclude": {
        "**/.git": true,
        "**/*.js.map": true,
        "**/*.js": {"when": "$(basename).ts"},
        "**/*.d.ts": {"when": "$(basename).ts"},
        "**/node_modules/":true,
        "**/typings/": true,
        "**/bin/": true,
        "**/logs/": true,
        "**/obj/": true,
        "**/.vs/": true,
        "**/.pm2/": true,
        "**/.ebextensions/": true,
        "**/.babelrc" : true,
        "**/.buckconfig" : true,
        "**/.flowconfig" : true,
        "**/.gitattributes" : true,
        "**/yarn.lock" : true,
        "**/package-lock.json" : true,
        "**/__tests__" : true
    },
    "typescript.check.tscVersion": true
}